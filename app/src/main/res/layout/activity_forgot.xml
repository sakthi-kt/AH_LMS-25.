<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forget.ForgotActivity">

    <ImageView
        android:id="@+id/forgotImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="25dp"
        android:src="@drawable/forgot"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleFp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/forgotImage"
        android:text="Forgot password?"
        android:layout_margin="25dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fmailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titleFp"
        app:layout_constraintStart_toStartOf="parent"
        app:boxStrokeColor="@color/ah"
        android:layout_marginTop="35dp"
        app:hintTextColor="@color/black"
        style="@style/LoginTextInputOuterFieldStyle"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fmailEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter mail id "/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/linkBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fmailLayout"
        android:layout_marginTop="35dp"
        android:text="Get link"
        android:textAllCaps="false"/>



</androidx.constraintlayout.widget.ConstraintLayout>